  const [progress, setProgress] = useState(0);

  useEffect(() => {
    let interval;
    if (playing) {
      interval = setInterval(() => {
        setProgress((prev) => (prev >= 100 ? 0 : prev + 1));
      }, 50);
    }
    return () => clearInterval(interval);
  }, [playing]);

