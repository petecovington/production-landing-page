    <div className={`relative p-8 md:p-12 rounded-lg border-4 border-[#2D241E] transition-colors duration-700 ${mode === 'harvest' ? 'bg-[#704214]' : 'bg-[#E5DCC5]'} shadow-[8px_8px_0px_0px_rgba(45,36,30,1)]`}>
